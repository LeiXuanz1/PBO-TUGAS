<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tugas6.data.StudentController">
    <Label text="Student Menu" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Name:"/>
    <Label fx:id="studentNameLabel"/>
    <Label text="NIM:"/>
    <Label fx:id="studentNimLabel"/>
    <Label text="Available Books:" style="-fx-font-size: 18px;"/>
    <ListView fx:id="bookListView" prefHeight="200"/>
    <Button text="Borrow Book" onAction="#handleBorrowBook"/>
    <Label text="Borrowed Books:" style="-fx-font-size: 18px;"/>
    <ListView fx:id="borrowedListView" prefHeight="200"/>
    <Button text="Return Book" onAction="#handleReturnBook"/>
    <Button text="Logout" onAction="#handleLogout"/>
</VBox>
