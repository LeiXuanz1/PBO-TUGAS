<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tugas6.data.AdminController">
    <Label text="Admin Menu" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Book Title:"/>
        <TextField fx:id="bookTitleField"/>
        <Label text="Author:"/>
        <TextField fx:id="bookAuthorField"/>
        <Label text="Stock:"/>
        <TextField fx:id="bookStockField"/>
    </GridPane>
    <HBox spacing="10">
        <Button text="Add Book" onAction="#handleAddBook"/>
        <Button text="Logout" onAction="#handleLogout"/>
    </HBox>
</VBox>