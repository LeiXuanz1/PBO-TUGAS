<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tugas6.data.LoginController">
    <Label text="Library System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Username:"/>
        <TextField fx:id="usernameField"/>
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField"/>
    </GridPane>
    <HBox spacing="10">
        <Button text="Login" onAction="#handleLogin"/>
    </HBox>
</VBox>
